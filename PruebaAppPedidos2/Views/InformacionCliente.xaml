<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PruebaAppPedidos2.Views.InformacionCliente"
             Title="Cliente">
    <ScrollView Margin="8">
        <StackLayout>
            <Label Text="Cliente"
                   FontAttributes="Bold"
                   FontSize="Large"/>
            <StackLayout Orientation="Horizontal">
                <Entry Placeholder="NIT"
                       HorizontalOptions="FillAndExpand"
                       Text="{Binding Tronit}"/>
                <Label Text="Tel: "
                       VerticalTextAlignment="Center"
                       FontSize="Body"
                       HorizontalOptions="Start"
                       Margin="0,0,5,0"/>
                <Frame HorizontalOptions="FillAndExpand"
                       CornerRadius="20"
                       Padding="0">
                    <Label Text="{Binding ClienteActual.trotelef}"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"/>
                </Frame>
            </StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Text="Nombre: " Grid.Row="0" Grid.Column="0"
                       VerticalTextAlignment="Center"
                       FontSize="Medium"
                       HorizontalOptions="Start"
                       Margin="0,0,5,0"/>
                <Frame Grid.Row="0" Grid.Column="1" 
                       HorizontalOptions="FillAndExpand"
                       CornerRadius="20"
                       Padding="10">
                    <Label Text="{Binding ClienteActual.tronombre}"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"/>
                </Frame>
                <Label Text="Correo: " Grid.Row="1" Grid.Column="0"
                       VerticalTextAlignment="Center"
                       FontSize="Medium"
                       HorizontalOptions="Start"
                       Margin="0,0,5,0"/>
                <Frame Grid.Row="1" Grid.Column="1" 
                       HorizontalOptions="FillAndExpand"
                       CornerRadius="20"
                       Padding="10">
                    <Label Text="{Binding ClienteActual.troemail}"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"/>
                </Frame>
                <Label Text="Celular: " Grid.Row="2" Grid.Column="0"
                       VerticalTextAlignment="Center"
                       FontSize="Medium"
                       HorizontalOptions="Start"
                       Margin="0,0,5,0"/>
                <Frame Grid.Row="2" Grid.Column="1" 
                       HorizontalOptions="FillAndExpand"
                       CornerRadius="20"
                       Padding="10">
                    <Label Text="{Binding ClienteActual.trocelular}"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"/>
                </Frame>
            </Grid>
            <Grid>
                <Grid.RowDefinitions >
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Text="Escala" Grid.Row="0" Grid.Column="0"
                       FontSize="Body"
                       VerticalTextAlignment="Center"                       
                       HorizontalOptions="Start"/>
                <Frame HorizontalOptions="FillAndExpand" Grid.Row="0" Grid.Column="1"
                       CornerRadius="20"
                       Padding="10">
                    <Label Text="{Binding PrecioOtorgado}"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"/>
                </Frame>
                <Label Text="Saldo&#10;Vencido:" Grid.Row="0" Grid.Column="2"
                       FontSize="Body"
                       VerticalTextAlignment="Center"                       
                       HorizontalOptions="Start"/>
                <Frame HorizontalOptions="FillAndExpand" Grid.Row="0" Grid.Column="3"
                       CornerRadius="20"
                       Padding="10">
                    <Label Text="{Binding ClienteActual.troccsdovn}"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"/>
                </Frame>
                <Label Text="Factura X&#10;Cobrar:" Grid.Row="1" Grid.Column="2"
                       FontSize="Body"
                       VerticalTextAlignment="Center"                       
                       HorizontalOptions="Start"/>
                <Frame HorizontalOptions="FillAndExpand" Grid.Row="1" Grid.Column="3"
                       CornerRadius="20"
                       Padding="10">
                    <Label Text="{Binding ClienteActual.troccsaldo}"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"/>
                </Frame>
                <Label Text="Cupo:" Grid.Row="2" Grid.Column="2"
                       FontSize="Body"
                       VerticalTextAlignment="Center"                       
                       HorizontalOptions="Start"/>
                <Frame Grid.Row="2" Grid.Column="3" 
                       Padding="10"
                       CornerRadius="20">
                    <Label Text="{Binding ClienteActual.trocccupo}"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"/>
                </Frame>
            </Grid>
            <Label Text="Despacho"
                   FontAttributes="Bold"
                   FontSize="Large"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".3*"/>
                    <ColumnDefinition Width=".7*"/>
                </Grid.ColumnDefinitions>
                <Label Text="Nombre Despacho: " Grid.Row="0" Grid.Column="0"
                       VerticalTextAlignment="Center"
                       FontSize="Body"
                       HorizontalOptions="Start"
                       Margin="0,0,5,0"/>
                <Frame Grid.Row="0" Grid.Column="1" 
                       HorizontalOptions="FillAndExpand"
                       CornerRadius="20"
                       Padding="10">
                    <Label Text="{Binding DespachoActual.titular}"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"/>
                </Frame>
                <Label Text="Direccion: " Grid.Row="1" Grid.Column="0"
                       VerticalTextAlignment="Center"
                       FontSize="Body"
                       HorizontalOptions="Start"
                       Margin="0,0,5,0"/>
                <Frame Grid.Row="1" Grid.Column="1" 
                       HorizontalOptions="FillAndExpand"
                       CornerRadius="20"
                       Padding="10">
                    <Label Text="{Binding DespachoActual.titudire}"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"/>
                </Frame>
                <Label Text="Cuidad: " Grid.Row="2" Grid.Column="0"
                       VerticalTextAlignment="Center"
                       FontSize="Body"
                       HorizontalOptions="Start"
                       Margin="0,0,5,0"/>
                <Frame Grid.Row="2" Grid.Column="1" 
                       HorizontalOptions="FillAndExpand"
                       CornerRadius="20"
                       Padding="10">
                    <Label Text="{Binding DespachoActual.tituciud}"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"/>
                </Frame>
                <Label Text="Tel: " Grid.Row="3" Grid.Column="0"
                       VerticalTextAlignment="Center"
                       FontSize="Body"
                       HorizontalOptions="Start"
                       Margin="0,0,5,0"/>
                <Frame Grid.Row="3" Grid.Column="1" 
                       HorizontalOptions="FillAndExpand"
                       CornerRadius="20"
                       Padding="10">
                    <Label Text="{Binding DespachoActual.titutelf}"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"/>
                </Frame>
            </Grid>
            <Button Text="actualizar" Command="{Binding obtenerClienteCommand}"/>
        </StackLayout>
    </ScrollView>
</ContentPage>